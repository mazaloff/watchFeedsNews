<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
                name="item"
                type="ru.observe.twits.uimodels.ItemLink"/>
    </data>


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp" app:contentPadding="3dp" app:cardCornerRadius="2dp"
            app:cardUseCompatPadding="false" app:cardPreventCornerOverlap="false" app:cardElevation="2dp"
            android:layout_margin="3dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="10">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/image_rss"
                    android:id="@+id/imageView"
                    android:layout_weight="1"/>
            <TextView
                    android:text="@{item.name}"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:text="@string/app_name"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_weight="9"
            />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</layout>